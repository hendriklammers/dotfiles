alias reload='source ~/bin/dotfiles/bashrc'
alias ea='subl -w ~/bin/dotfiles/bash/.aliases && reload'
alias func='subl -w ~/bin/dotfiles/bash/.functions && reload'
alias cfg='subl -w ~/bin/dotfiles/bash/.config && reload'

# Terminal
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias la='ls -A -l -G' # List all
alias l.='ls -d .[^.]*' # List hidden
alias lsd='ls -l | grep "^d"' # List directories
alias cl='clear' #clear screen

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Finder
alias o='open .'
alias showdotfiles="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hidedotfiles="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# IP address
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# Edit settings
alias edit_ssh='subl -a ~/.ssh/config'

# Git
alias gi='git init'
alias ungit='find . -name ".git" -exec rm -rf {} \;'
alias gb='git branch'
alias gbc='git checkout -b'
alias gba='git branch -a'
alias grb='git branch -d'
alias ga='git add'
alias gc='git commit -v -m'
alias gca='git commit -v -a -m'
alias gco='git checkout'
alias gd='git diff | subl'
alias gdm='git diff master'
alias gl='git pull'
alias gnp="git-notpushed"
alias gp='git push'
alias gs='git status'

# Merge PDF files
# Usage: `mergepdf -o output.pdf input{1,2,3}.pdf`
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'

# Shortcuts
alias code='cd ~/code'
alias dl='cd ~/downloads'
alias desk='cd ~/desktop'
alias work='cd ~/work'
alias drop='cd ~/Dropbox'
alias doc='cd ~/Documents'
alias proj='cd ~/projects'
alias dot='cd ~/bin/dotfiles'
alias alamode='cd ~/code/tumblr/themes/a-la-mode/develop'