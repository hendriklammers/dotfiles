endsnippet

snippet ngch "ng-change"
ng-change="$1"$0
endsnippet

snippet ngr "ng-repeat"
ng-repeat="$1"$0
endsnippet

snippet ngi "ng-if"
ng-if="$1"$0
endsnippet

snippet ngs "ng-show"
