[user]
    name = Hendrik Lammers
    email = lammers@gmail.com
[color]
    ui = always
[core]
    editor = nvim
    excludesfile = ~/.gitignore
	autocrlf = input
    filemode = false
[merge]
    log = true
    tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status -s
	d = difftool
[pull]
	rebase = true
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[mergetool]
	path = nvim
